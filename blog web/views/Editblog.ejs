      <form action="/updates/<%= bloggs._id %>" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="exampleInputName">Title</label>
          <pre> <input type="text" name="title" class="form-control" placeholder="Title" value= "<%=bloggs.title %>"> </pre>
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Category</label>
          <pre>  <select class="form-control" name="category" id="exampleFormControlSelect1"  >
              <% category.forEach((row, index)=> { %>
                <option value="<%= row._id %>">
                  <%= row.category %>
                </option>
                <% }) %>

            </select> </pre>

        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Description</label>
          <pre><textarea class="form-control" name="description" id="exampleFormControlTextarea1"
              rows="3">  <%= bloggs.description %> </textarea></pre>
        </div>

        <div class="mt-3">
          <label for="image" class="form-label">Upload images</label>
          <input class="form-control" type="file" id="formFileMultiple" name="image">
          <img src="/<%= bloggs.image %>" class="img-thumbnail">
        </div>
        <input type="hidden" value="<%= bloggs.image %>" name="image">


        <button type="submit" class="btn-block btn btn-success mt-4" <a href="/blog/get"><svg
            xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save"
            viewBox="0 0 16 16">
