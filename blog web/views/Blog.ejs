<%- include ('layouts/main') %>
    <!-- Connection of admin header -->
    <%- include ('layouts/aheader') %>

        <body>

            <div class="container">

                <h2 class="text-center">All Blogs</h2>
                <div class="table-responsive-small">
                    <% if (message) { %>
                        <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                            <strong>
                                <%= message.message %>
                            </strong>
                        </div>
                        <% } %>
                            <div class="text-left">


                                <table class="table">
                                    <% if(bloggs !='' ) { %>
                                        <thead class="table-info">
                                            <tr>
                                                <th>Id</th>
                                                <th>Title</th>
                                                <th>Category</th>
                                                <th>Description</th>
                                                <th>Action</th>


                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% bloggs.forEach((row, index)=> { %>
                                                <tr>
                                                    <td>
                                                        <%= index %>
                                                    </td>
                                                    <td>
                                                        <%= row.title %>
                                                    </td>
                                                    <td>
                                                        <%= row.category.category %>
                                                    </td>
                                                    <td>

                                                        <p>
                                                            <%= row.description %>
                                                        </p>
                                                    </td>

                                                    <td>
                                                        <a href="/blog/<%= row._id %>"
                                                            class="btn btn-outline-primary"><svg
                                                                xmlns="http://www.w3.org/2000/svg" width="16"
                                                                height="16" fill="currentColor" class="bi bi-pen-fill"
                                                                viewBox="0 0 16 16">
                                                                <path
                                                                    d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z" />
                                                            </svg>

                                                            <a href="/deletes/<%= row._id %>"
                                                                class="btn btn-outline-danger"><svg
                                                                    xmlns="http://www.w3.org/2000/svg" width="16"
                                                                    height="16" fill="currentColor"
                                                                    class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                                    <path
                                                                        d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                                                </svg>

                                                    </td>
                                                </tr>
                                                <% }) %>

                                        </tbody>
                                        <% } else { %>
                                            <h1 style="text-align: center; color:rgb(0, 0, 0); padding-top: 10px;">No
                                                Blogs are available</h1>
                                            <% } %>

                                </table>
                            </div>
                </div>
            </div>
        </body>
        <%- include ('layouts/footer') %>